<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CharacterPickerView">
        <!--设置顶部和顶部阴影-->
        <attr name="cp_drawShadows" format="boolean"/>
        <attr name="cp_shadowsColorStart" format="color"/>
        <attr name="cp_shadowsColorCenter" format="color"/>
        <attr name="cp_shadowsColorEnd" format="color"/>
        <!--选择背景和最基础背景-->
        <attr name="cp_wheelBackground" format="reference"/>
        <attr name="cp_wheelSelectBackground" format="reference"/>
        <!--文字颜色-->
        <attr name="cp_textDefaultColor" format="color"/>
        <attr name="cp_textSelectColor" format="color"/>
        <attr name="cp_textSize" format="dimension"/>
        <attr name="cp_textColor" format="color"/>
        <!--是否循环-->
        <attr name="cp_cycle" format="boolean"/>
        <!--列表个数-->
        <attr name="cp_listCount" format="integer"/>
        <!-- 显示个数-->
        <attr name="cp_visibleItems" format="integer"/>
    </declare-styleable>

</resources>